<!DOCTYPE menu [
  <!ENTITY icons "/usr/share/archcraft/openbox/icons">
  <!ENTITY pipes "/usr/share/archcraft/openbox/pipemenus">
]>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/  file:///usr/share/openbox/menu.xsd">
  <!--=======================================================================-->
	<menu id="root-menu" title="Menu" label="Openbox 3">
  		<!--=================================================================-->
		<item icon="&icons;/terminal.png" label="Terminal">
			<action name="Execute">
				<command>xfce4-terminal</command>
			</action>
		</item>
  		<!--=================================================================-->
		<separator/>
  		<!--=================================================================-->
		<item icon="&icons;/filemanager.png" label="Arquivos">
			<action name="Execute">
				<command>thunar</command>
			</action>
		</item>
  		<!--=================================================================-->
		<separator/>
  		<!--=================================================================-->
		<item icon="&icons;/browser.png" label="Navegador">
			<action name="Execute">
				<command>google-chrome-stable</command>
			</action>
		</item>
  		<!--=================================================================-->
		<separator/>
  		<!--=================================================================-->
		<item icon="&icons;/editor.png" label="Editor de Textos">
			<action name="Execute">
				<command>geany</command>
			</action>
		</item>
  		<!--=================================================================-->
		<separator/>
		<separator/>
		<separator/>
  		<!--=================================================================-->
		<menu icon="&icons;/apps.png" id="app-menu" execute="obmenu-generator" label="Programas"/>
  		<!--=================================================================-->
		<separator/>
  		<!--=================================================================-->
		<menu icon="&icons;/root.png" id="apps-as-root" label="Abrir como Root">
  			<!--=============================================================-->
			<item label="Terminal">
				<action name="Execute">
					<execute>~/.config/openbox/rofi/bin/apps_as_root xfce4-terminal</execute>
				</action>
			</item>
  			<!--=============================================================-->
			<item label="Arquivos">
				<action name="Execute">
					<execute>~/.config/openbox/rofi/bin/apps_as_root 'dbus-run-session thunar'</execute>
				</action>
			</item>
  			<!--=============================================================-->
			<item label="Editor de Textos">
				<action name="Execute">
					<execute>~/.config/openbox/rofi/bin/apps_as_root geany</execute>
				</action>
			</item>
  			<!--=============================================================-->
			<separator/>
  			<!--=============================================================-->
			<item label="LxAppearance">
				<action name="Execute">
					<execute>~/.config/openbox/rofi/bin/apps_as_root 'lxappearance'</execute>
				</action>
			</item>
  			<!--=============================================================-->
			<item label="QT5 Settings">
				<action name="Execute">
					<execute>~/.config/openbox/rofi/bin/apps_as_root 'qt5ct'</execute>
				</action>
			</item>
  			<!--=============================================================-->
			<item label="Kvantum Manager">
				<action name="Execute">
					<execute>~/.config/openbox/rofi/bin/apps_as_root 'kvantummanager'</execute>
				</action>
			</item>
		</menu>
  		<!--=================================================================-->
		<separator/>
  		<!--=================================================================-->
		<menu icon="&icons;/settings.png" id="preferences" label="Configurações">
  			<!--=============================================================-->
			<menu id="obconfig" label="Openbox">
  				<!--=========================================================-->
				<!-- <menu id="ac-ob-menu" execute="&pipes;/ac-ob-menu" label="Menu Style"/> -->
  				<!--=========================================================-->
				<item label="Gerenciador do Openbox">
					<action name="Execute">
						<command>obconf</command>
					</action>
				</item>
  				<!--=========================================================-->
				<separator/>
  				<!--=========================================================-->
				<item label="Editar 'menu.xml'">
					<action name="Execute">
						<command>exo-open ~/.config/openbox/menu-icons.xml</command>
					</action>
				</item>
  				<!--=========================================================-->
				<item label="Editar 'rc.xml'">
					<action name="Execute">
						<command>exo-open ~/.config/openbox/rc.xml</command>
					</action>
				</item>
  				<!--=========================================================-->
				<item label="Editar 'autostart'">
					<action name="Execute">
						<command>exo-open ~/.config/openbox/autostart</command>
					</action>
				</item>
  				<!--=========================================================-->
				<separator/>
  				<!--=========================================================-->
				<!-- <item label="Reconfigure"> -->
					<!-- <action name="Reconfigure"/> -->
				<!-- </item> -->
  				<!--=========================================================-->
				<item label="Recarregar">
					<action name="Restart"/>
				</item>
			</menu>
  			<!--=============================================================-->
			<menu id="CompositingPipeMenu" execute="&pipes;/ac-compositor" label="Compositor"/>
  			<!--=============================================================-->
			<!-- <menu id="XrandrPipeMenu" execute="&pipes;/ac-randr" label="Display / Monitor"/> -->
  			<!--=============================================================-->
			<separator/>
			<separator/>
			<separator/>
  			<!--=============================================================-->
			<menu id="StylePipeMenu" execute="&pipes;/ac-change-style"
			label="Temas"/>
  			<!--=============================================================-->
			<!-- <menu id="FontPipeMenu" execute="&pipes;/ac-change-fonts" label="Change Font"/> -->
  			<!--=============================================================-->
			<!-- <menu id="SchemePipeMenu" execute="&pipes;/ac-change-scheme" label="Terminal Color Scheme"/> -->
  			<!--=============================================================-->
			<separator/>
			<separator/>
			<separator/>
  			<!--=============================================================-->
			<item label="Papel de Parede">
				<action name="Execute">
					<command>nitrogen</command>
				</action>
			</item>
  			<!--=============================================================-->
			<item label="Aparência">
				<action name="Execute">
					<command>xfce4-appearance-settings</command>
				</action>
			</item>
  			<!--=============================================================-->
			<item label="QT5 Settings">
				<action name="Execute">
					<command>qt5ct</command>
				</action>
			</item>
  			<!--=============================================================-->
			<item label="Kvantum Manager">
				<action name="Execute">
					<command>kvantummanager</command>
				</action>
			</item>
  			<!--=============================================================-->
			<separator/>
			<separator/>
			<separator/>
  			<!--=============================================================-->
			<item label="Opções de Energia">
				<action name="Execute">
					<command>xfce4-power-manager-settings</command>
				</action>
			</item>
  			<!--=============================================================-->
			<item label="Som/Audio">
				<action name="Execute">
					<command>pavucontrol</command>
				</action>
			</item>
  			<!--=============================================================-->
			<item label="Painel de controle">
				<action name="Execute">
					<command>xfce4-settings-manager</command>
				</action>
			</item>
		</menu>
		<!--=================================================================-->
		<separator/>
		<!--=================================================================-->
		<!-- <menu icon="&icons;/keyboard.png" id="KeybindsPipeMenu" execute="&pipes;/ac-kb-pipemenu" label="Keybinds"/> -->
		<!--=================================================================-->
		<separator/>
		<separator/>
		<separator/>
		<!--=================================================================-->
		<menu icon="&icons;/sys-poweroff.png" id="Exit" label="Sistema">
			<!--=============================================================-->
			<menu icon="&icons;/stats.png" id="SystemPipeMenu" execute="&pipes;/ac-sysinfo" label="Status"/>
				<!--=========================================================-->
				<separator/>
				<!--=========================================================-->
				<item icon="&icons;/sys-exit.png" label="Logout">
					<action name="Execute">
						<command>/usr/share/archcraft/openbox/pipemenus/ac-powermenu --logout</command>
					</action>
				</item>
				<!--=========================================================-->
				<separator/>
				<!--=========================================================-->
				<item icon="&icons;/sys-sleep.png" label="Suspender">
					<action name="Execute">
						<command>/usr/share/archcraft/openbox/pipemenus/ac-powermenu --suspent</command>
					</action>
				</item>
				<!--=========================================================-->
				<separator/>
				<!--=========================================================-->
				<item icon="&icons;/sys-reboot.png" label="Reiniciar">
					<action name="Execute">
						<command>/usr/share/archcraft/openbox/pipemenus/ac-powermenu --reboot</command>
					</action>
				</item>
				<!--=========================================================-->
				<separator/>
				<!--=========================================================-->
				<item icon="&icons;/sys-poweroff-alt.png" label="Desligar">
					<action name="Execute">
						<command>/usr/share/archcraft/openbox/pipemenus/ac-powermenu --shutdown</command>
					</action>
				</item>
			</menu>
		</menu>
	</menu>
</openbox_menu>
